<Page x:Class="WPFMeteroWindow.Controls.TextInputControls.Competitive.Competitive"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFMeteroWindow.Controls.TextInputControls.Competitive"
      xmlns:prop="clr-namespace:WPFMeteroWindow.Properties"
      xmlns:mw="clr-namespace:WPFMeteroWindow"
      mc:Ignorable="d" 
      d:DesignHeight="180" d:DesignWidth="800"
      VerticalAlignment="Bottom"
      Title="Competitive">

    <Grid 
        Width="770">

        <WrapPanel
            x:Name="TextInputWrapPanel"
            Height="180">
        </WrapPanel>

        <TextBlock
            Style="{StaticResource CompetitiveTextStyle}"
            
            Background="{Binding SecondBackground, Source={x:Static prop:Settings.Default}}"
            Foreground="{Binding KeyboardErrorHighlightColor, Source={x:Static prop:Settings.Default}}"
            
            Visibility="Hidden"
            x:Name="ErrorInputTextBlock"
            
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Padding="6 3 6 3">
        </TextBlock>
    </Grid>
</Page>
