<Page x:Class="WPFMeteroWindow.Controls.TextInputControls.SingleWord.SingleWord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFMeteroWindow.Controls.TextInputControls.SingleWord"
      xmlns:prop="clr-namespace:WPFMeteroWindow.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="900"
      Title="SingleWord"
      VerticalAlignment="Bottom">

    <Grid Width="900" VerticalAlignment="Bottom" Margin="0 0 0 40">
        <TextBox 
            x:Name="SingleWordTextBox"
            Style="{StaticResource SingleWordInputTextStyle}"
            Foreground="{Binding MainFontColor, Source={x:Static prop:Settings.Default}}"
            IsReadOnly="True"
            Margin="230 0 0 10">
        </TextBox>

        <TextBox 
            x:Name="SingleWordInputTextBox"
            Style="{StaticResource SingleWordInputTextStyle}"
            Foreground="{Binding RaidedFontColor, Source={x:Static prop:Settings.Default}}"
            IsReadOnly="True"
            Margin="230 0 0 10">
        </TextBox>
    </Grid>
</Page>
