<controls:MetroWindow 
    x:Class="WPFMeteroWindow.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WPFMeteroWindow"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:ctrls="clr-namespace:WPFMeteroWindow.Controls"
    mc:Ignorable="d"
    Title="TestWindow" Height="450" Width="800"
    AllowsTransparency="True"
    
    WindowTitleBrush="Transparent"
    OverlayBrush="Transparent"
    GlowBrush="Transparent"
    Background="Transparent" 
    BorderBrush="Transparent">

    <ctrls:ClippingBorder
        Margin="0 -32 0 0"
        Background="#363636"
        BorderBrush="#202020"
        CornerRadius="8">
    </ctrls:ClippingBorder>
</controls:MetroWindow>
