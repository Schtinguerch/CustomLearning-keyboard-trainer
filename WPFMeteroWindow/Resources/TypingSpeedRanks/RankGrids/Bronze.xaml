<UserControl x:Class="WPFMeteroWindow.Resources.TypingSpeedRanks.RankGrids.Bronze"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMeteroWindow.Resources.TypingSpeedRanks.RankGrids"
             xmlns:ranks="clr-namespace:WPFMeteroWindow.Resources.TypingSpeedRanks"
             mc:Ignorable="d" 
             d:DesignWidth="160">

    <StackPanel x:Name="RankStackPanel">
        <Grid                                   
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="100"
            Height="100">

            <Rectangle
                Fill="Transparent"
                Stroke="#cd7f32"
                StrokeThickness="3"
                RadiusX="15"
                RadiusY="15">
            </Rectangle>

            <TextBlock
                Text="B"
                Foreground="#cd7f32"
                Padding="16 4 0 0"
                FontSize="52">
            </TextBlock>
        </Grid>

        <TextBlock
            Style="{StaticResource RankTextBlockStyle}"
            Text="Bronze"
            Foreground="#cd7f32">
        </TextBlock>
    </StackPanel>
</UserControl>
