<UserControl x:Class="WPFMeteroWindow.Resources.TypingSpeedRanks.RankGrids.Student"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMeteroWindow.Resources.TypingSpeedRanks.RankGrids"
             xmlns:ranks="clr-namespace:WPFMeteroWindow.Resources.TypingSpeedRanks"
             mc:Ignorable="d" 
             d:DesignWidth="160">

    <StackPanel x:Name="RankStackPanel">
        <Grid                                   
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="100"
            Height="100">

            <Rectangle
                Fill="LightBlue"
                RadiusX="30"
                RadiusY="30">
            </Rectangle>

            <TextBlock
                Text="XYZ"
                Foreground="#242424"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="28">
            </TextBlock>
        </Grid>

        <TextBlock
            Style="{StaticResource RankTextBlockStyle}"
            Text="Student"
            Foreground="LightBlue">
        </TextBlock>
    </StackPanel>
</UserControl>
