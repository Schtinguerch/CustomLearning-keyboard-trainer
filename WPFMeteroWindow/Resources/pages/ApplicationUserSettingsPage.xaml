                    <Grid Style="{StaticResource SettingsItemStyle}"
                          Margin="0 300 0 0">
                    </Grid>
                </StackPanel>

            </ScrollViewer>
        </Grid>

        <ext:ColorPicker
            Grid.Row="1"
            Width="0"
            Height="0"
            Background="#202020"
            Foreground="Black"
            UsingAlphaChannel="True"
            x:Name="SetupColorPicker"
            SelectedColorChanged="SetupColorPicker_OnSelectedColorChanged"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            PreviewMouseUp="Page_MouseUp">
        </ext:ColorPicker>


        <Grid Grid.Row="0"
              Background="{Binding Path=SecondBackground ,Source={x:Static prop:Settings.Default}}">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="30"></DropShadowEffect>
            </Grid.Effect>

            <TextBlock 
                Style="{StaticResource SummaryTextStyle}"
                FontSize="20"
                Margin="20 0 0 0"
                Text="{x:Static res:Resources.uSettHeader}"
                Width="160"
                HorizontalAlignment="Left">
            </TextBlock>

            <TextBox
                FontSize="20"
                Margin="0 10 0 10"
                Width="400"
                x:Name="SearchPropertyTextBox"
                
                Background="{Binding ThirdBackground, Source={x:Static prop:Settings.Default}}"
                FontFamily="{Binding SummaryFont, Source={x:Static prop:Settings.Default}}"
                BorderBrush="#121212"
                
                TextChanged="SearchPropertyTextBox_TextChanged">
            </TextBox>

            <StackPanel 
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Margin="10">
                <Button 
                    Width="50" 
                    BorderBrush="{Binding Path=MainBackground ,Source={x:Static prop:Settings.Default}}" 
                    Background="{Binding Path=MainBackground ,Source={x:Static prop:Settings.Default}}"
                    FontSize="16"
                    FontFamily="{Binding SummaryFont, Source={x:Static prop:Settings.Default}}"
                    Foreground="{Binding SummaryFontColor, Source={x:Static prop:Settings.Default}}"
                    x:Name="ApplyButton"
                    Click="ApplyButton_OnClick">
                    ✓
                </Button>
                <Button 
                    Width="50"
                    Margin="10 0 0 0"
                    BorderBrush="{Binding Path=MainBackground ,Source={x:Static prop:Settings.Default}}" 
                    Background="{Binding Path=MainBackground ,Source={x:Static prop:Settings.Default}}"
                    FontSize="16"
                    FontFamily="{Binding SummaryFont, Source={x:Static prop:Settings.Default}}"
                    Foreground="{Binding SummaryFontColor, Source={x:Static prop:Settings.Default}}"
                    x:Name="DiscardButton" Click="DiscardButton_Click">
                    ✖
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
