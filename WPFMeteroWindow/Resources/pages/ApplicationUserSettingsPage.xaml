                                x:Name="MainColorTextBox"
                                TextChanged="MainColorTextBox_OnTextChanged"
                                Text="{Binding Path=MainBackground ,Source={x:Static prop:Settings.Default}}">
                            </TextBox>

                            <Button 
                                Margin="10 0 0 0"
                                Width="38"
