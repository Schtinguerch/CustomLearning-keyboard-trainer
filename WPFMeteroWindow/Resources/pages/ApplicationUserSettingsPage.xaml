                                x:Name="LessonSymbolsColorButton"
                                Click="LessonSymbolsColorButton_OnClick">
                                🖌
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Style="{StaticResource SettingsItemStyle}"
                    >
                        <TextBlock
                            Style="{StaticResource SummaryTextStyle}"
                            VerticalAlignment="Top"
                            Text="{x:Static res:Resources.uSettRaidedLessonSymbolsColor}"
