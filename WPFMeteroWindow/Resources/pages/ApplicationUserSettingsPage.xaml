<Page x:Class="WPFMeteroWindow.Resources.pages.ApplicationUserSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:prop="clr-namespace:WPFMeteroWindow.Properties"
      xmlns:res="clr-namespace:WPFMeteroWindow.Resources.localizations"
      xmlns:local="clr-namespace:WPFMeteroWindow.Resources.pages"
      xmlns:ext="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="ApplicationUserSettingsPage"
      MouseUp="Page_MouseUp"
      PreviewKeyDown="Page_PreviewKeyDown">

    <Page.Resources>
        <Storyboard
            x:Key="HighlightSearchResultStoryboard"
            TargetName="SearchResultHighLightRectangle"
            TargetProperty="Opacity">

            <DoubleAnimation
                From="0"
                To="1"
                Duration="0:0:0.25"
                AutoReverse="True"
                AccelerationRatio="0.8">
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid
        x:Name="BackGrid"
        Width="800"
        Height="500"
        Background="{Binding Path=MainBackground ,Source={x:Static prop:Settings.Default}}">
        
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30"></DropShadowEffect>
        </Grid.Effect>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="54"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Rectangle 
                x:Name="SearchResultHighLightRectangle"
                Opacity="0"
                VerticalAlignment="Top"  Margin="0 42 0 0"
                Fill="{Binding Path=KeyboardHighlightColor ,Source={x:Static prop:Settings.Default}}">

                <Rectangle.OpacityMask>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0.0" Color="Transparent"></GradientStop>
                        <GradientStop Offset="0.2" Color="Black"></GradientStop>
                        <GradientStop Offset="0.8" Color="Black"></GradientStop>
                        <GradientStop Offset="1.0" Color="Transparent"></GradientStop>
                    </LinearGradientBrush>
                </Rectangle.OpacityMask>
            </Rectangle>
            
            <ScrollViewer
                VerticalScrollBarVisibility="Visible"
                x:Name="wrapPanel">
                <StackPanel
                    x:Name="ScrollListStackPanel"
                    Orientation="Vertical"
                    Width="400"
                    Margin="13 0 0 0">

                    <Grid Style="{StaticResource SettingsItemStyle}"
                          Margin="0 24 0 10"
                          Height="30"
                          x:Name="TopPositionGrid">
                        
                        <TextBlock
                            Style="{StaticResource SummaryTextStyle}"
                            VerticalAlignment="Top"
                            Text="{x:Static res:Resources.uSettBaseColors}"
                            FontSize="24">
                        </TextBlock>
                    </Grid>
                    
                    <Grid Style="{StaticResource SettingsItemStyle}"
                    >
                        <TextBlock
                            Style="{StaticResource SummaryTextStyle}"
                            VerticalAlignment="Top"
                            Text="{x:Static res:Resources.uSettWindowColor}"
                            FontSize="18">
                        </TextBlock>

                        <StackPanel
                            Height="32"
                            Width="400"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">

                            <ComboBox
                                FontSize="18"
                                Height="32"
                                Width="350"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Background="{Binding ThirdBackground, Source={x:Static prop:Settings.Default}}"
                                FontFamily="{Binding SummaryFont, Source={x:Static prop:Settings.Default}}"
                                BorderBrush="#121212"
                                x:Name="WindowColors"
                                SelectionChanged="WindowColors_OnSelectionChanged">
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Style="{StaticResource SettingsItemStyle}"
                    >
                        <TextBlock
                            Style="{StaticResource SummaryTextStyle}"
                            VerticalAlignment="Top"
                            Text="{x:Static res:Resources.uSettWindowBackgroundType}"
                            FontSize="18">
                        </TextBlock>

                        <StackPanel
                            Height="32"
                            Width="400"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">

                            <ComboBox
                                FontSize="18"
                                Height="32"
                                Width="350"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Background="{Binding ThirdBackground, Source={x:Static prop:Settings.Default}}"
                                FontFamily="{Binding SummaryFont, Source={x:Static prop:Settings.Default}}"
                                BorderBrush="#121212"
                                x:Name="WindowColorType"
                                SelectionChanged="WindowColorType_OnSelectionChanged">

                                <TextBlock Text="{x:Static res:Resources.uSettBrush}"></TextBlock>
                                <TextBlock Text="{x:Static res:Resources.uSettImage}"></TextBlock>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Style="{StaticResource SettingsItemStyle}"
                    >
                        <TextBlock
                            Style="{StaticResource SummaryTextStyle}"
                            VerticalAlignment="Top"
                            Text="{x:Static res:Resources.uBlurRadius}"
                            FontSize="18">
                        </TextBlock>

                        <StackPanel
                            Height="32"
                            Width="400"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">

                            <TextBox
                                FontSize="18"
                                Height="32"
                                Width="100"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                
                                Text="{Binding BackgroundBlurRadius, Source={x:Static prop:Settings.Default}}"
                                
                                Background="{Binding ThirdBackground, Source={x:Static prop:Settings.Default}}"
                                FontFamily="{Binding SummaryFont, Source={x:Static prop:Settings.Default}}"
                                BorderBrush="#121212"
                                x:Name="ImageBlurTextBox">
                            </TextBox>

                            <Slider
                                x:Name="ImageBlurSlider"
                                Margin="10 0 50 0"
                                Width="240"
                                Value="{Binding Path=BackgroundBlurRadius, Source={x:Static prop:Settings.Default}}"
                                Minimum="0"
                                Maximum="100" TickFrequency="1"
                                ValueChanged="ImageBlurSlider_ValueChanged"
                                PreviewMouseUp="Page_MouseUp" >
                            </Slider>
                        </StackPanel>
                    </Grid>

                    <Grid Style="{StaticResource SettingsItemStyle}"
                    >
                        <TextBlock
                            Style="{StaticResource SummaryTextStyle}"
                            VerticalAlignment="Top"
                            Text="{x:Static res:Resources.uTheme}"
                            FontSize="18">
                        </TextBlock>

                        <StackPanel
                            Height="32"
                            Width="400"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">

                            <ComboBox
                                FontSize="18"
                                Height="32"
                                Width="350"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Background="{Binding ThirdBackground, Source={x:Static prop:Settings.Default}}"
                                FontFamily="{Binding SummaryFont, Source={x:Static prop:Settings.Default}}"
                                BorderBrush="#121212"
                                x:Name="WindowTheme"
                                SelectionChanged="WindowTheme_OnSelectionChanged">
                                    <TextBlock Text="{x:Static res:Resources.uLight}"></TextBlock>
                                    <TextBlock Text="{x:Static res:Resources.uDark}"></TextBlock>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                    
